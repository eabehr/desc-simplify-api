{
    "name": "desc-simplify-api",
    "version": "1.0.0",
    "description": "RESTful json API for the DESC simplify project",
    "main": "index.js",
    "scripts": {
        "prebuild": "npm run clean",
        "build": "babel src -d build --ignore *test.js",
        "clean": "rimraf build",
        "serve:dev": "DEBUG=app,db* babel-node src/server.js",
        "preserve:prod": "npm run build",
        "serve:prod": "node build/server.js",
        "start": "npm run serve:dev",
        "test": "npm run test:unit -s && npm run test:acceptance -s",
        "test:acceptance": "NODE_ENV=testing DEBUG=app,test,db:* mocha src/utils/db-test-setup.js src/**/*.a-test.js --require babel-register",
        "test:unit": "NODE_ENV=testing mocha src/**/*.u-test.js --require babel-register"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jasonsjones/desc-simplify-api.git"
    },
    "author": "Jason S. Jones",
    "license": "MIT",
    "dependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-env": "^2.4.1",
        "bcrypt-nodejs": "^0.0.3",
        "debug": "^3.1.0",
        "dotenv": "^6.0.0",
        "ejs": "^2.6.1",
        "express": "^4.16.3",
        "mongoose": "^5.2.5",
        "morgan": "^1.9.0",
        "rimraf": "^2.6.2"
    },
    "devDependencies": {
        "babel-eslint": "^8.2.6",
        "babel-register": "^6.26.0",
        "chai": "^4.1.2",
        "eslint": "^5.1.0",
        "eslint-config-prettier": "^2.9.0",
        "eslint-plugin-prettier": "^2.6.2",
        "mocha": "^5.2.0",
        "prettier": "^1.13.7",
        "sinon": "^6.1.3",
        "supertest": "^3.1.0"
    }
}
